<h1>New comment</h1>

<% form_for(@comment) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body, :cols => 10, :rows => 5 %>
  </p>
  <p>
  	<%= hidden_field :comment, :post_id, :value => @post.id %>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', comments_path %>